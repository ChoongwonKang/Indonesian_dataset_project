install.packages("LexisNexisTools")
install.packages("LexisNexisTools")
install.packages('data.table')
install.packages("data.table")
install.packages('tidyverse')
library(tidyverse)
library(data.table)
library(lubridate)
library(LexisNexisTools)

# 목록 불러오기
LNToutput <- lnt_read(x = 'C:/Users/USER/Desktop/기사 데이터_로컬환경/data_Malaysia')

# 중복 기사 찾기
duplicates_df <- lnt_similarity(LNToutput = LNToutput,
                                threshold = 0.9,
                                nthread = parallel::detectCores()-1,
                                rel_dist = F 
)
# 90%이상 중복 시 제거
duplicates_df <- duplicates_df[duplicates_df$Similarity >= 0.9]

LNToutput <- LNToutput[!LNToutput@meta$ID %in% duplicates_df$ID_duplicate, ]
meta_articles_df <- lnt_convert(LNToutput, to = "data.frame")
meta_articles_df
# export File
fwrite(data.table(meta_articles_df),'C:/Users/USER/Ars Praxia/[T] 23-05-001 NIA AI 데이터셋 구축 - General/06-수집데이터/기사 데이터/원시 데이터/20231112_newsdata_assemble/20231112_newsdata_Malaysia.csv')
